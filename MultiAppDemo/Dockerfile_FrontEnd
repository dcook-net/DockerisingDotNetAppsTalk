FROM mcr.microsoft.com/dotnet/core/sdk:3.0.101-alpine3.10 AS builder
COPY . .

RUN dotnet publish -c Release ./src/FrontEnd/FrontEnd.csproj -o /app

FROM mcr.microsoft.com/dotnet/core/aspnet:3.0.1-alpine3.10

USER nobody
WORKDIR /app

COPY --chown=nobody:nobody --from=builder /app .

CMD ["dotnet", "FrontEnd.dll"]